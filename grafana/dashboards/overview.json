{
    "dashboard": {
      "title": "Music Separator - Overview",
      "tags": ["music-separator", "overview"],
      "timezone": "browser",
      "schemaVersion": 38,
      "version": 1,
      "refresh": "10s",
      "panels": [
        {
          "id": 1,
          "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
          "type": "stat",
          "title": "API Status",
          "targets": [
            {
              "expr": "up{job=\"music-separator-api\"}",
              "legendFormat": "Status"
            }
          ],
          "options": {
            "reduceOptions": {
              "calcs": ["lastNotNull"]
            },
            "graphMode": "none",
            "colorMode": "background",
            "text": {"valueSize": 50},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        },
        {
          "id": 2,
          "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
          "type": "stat",
          "title": "Total Separations",
          "targets": [
            {
              "expr": "sum(separations_total)",
              "legendFormat": "Total"
            }
          ],
          "options": {
            "reduceOptions": {
              "calcs": ["lastNotNull"]
            },
            "graphMode": "area",
            "colorMode": "value"
          }
        },
        {
          "id": 3,
          "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
          "type": "stat",
          "title": "Success Rate",
          "targets": [
            {
              "expr": "sum(rate(separations_total{status=\"success\"}[5m])) / sum(rate(separations_total[5m])) * 100",
              "legendFormat": "Success %"
            }
          ],
          "options": {
            "reduceOptions": {
              "calcs": ["lastNotNull"]
            },
            "graphMode": "area",
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        },
        {
          "id": 4,
          "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
          "type": "stat",
          "title": "Active Sessions",
          "targets": [
            {
              "expr": "active_sessions",
              "legendFormat": "Sessions"
            }
          ],
          "options": {
            "reduceOptions": {
              "calcs": ["lastNotNull"]
            },
            "graphMode": "area",
            "colorMode": "value"
          }
        },
        {
          "id": 5,
          "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
          "type": "timeseries",
          "title": "Request Rate",
          "targets": [
            {
              "expr": "sum(rate(http_requests_total[1m])) by (status)",
              "legendFormat": "{{status}}"
            }
          ],
          "options": {
            "legend": {"displayMode": "list", "placement": "bottom"}
          }
        },
        {
          "id": 6,
          "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
          "type": "timeseries",
          "title": "Separation Rate",
          "targets": [
            {
              "expr": "sum(rate(separations_total[1m])) by (model, status)",
              "legendFormat": "{{model}} - {{status}}"
            }
          ],
          "options": {
            "legend": {"displayMode": "list", "placement": "bottom"}
          }
        },
        {
          "id": 7,
          "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
          "type": "timeseries",
          "title": "Request Duration (p50, p95, p99)",
          "targets": [
            {
              "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
              "legendFormat": "p50"
            },
            {
              "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
              "legendFormat": "p95"
            },
            {
              "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
              "legendFormat": "p99"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "s"
            }
          }
        },
        {
          "id": 8,
          "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
          "type": "timeseries",
          "title": "Separation Duration (p50, p95, p99)",
          "targets": [
            {
              "expr": "histogram_quantile(0.50, rate(separation_duration_seconds_bucket[5m]))",
              "legendFormat": "p50"
            },
            {
              "expr": "histogram_quantile(0.95, rate(separation_duration_seconds_bucket[5m]))",
              "legendFormat": "p95"
            },
            {
              "expr": "histogram_quantile(0.99, rate(separation_duration_seconds_bucket[5m]))",
              "legendFormat": "p99"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "s"
            }
          }
        },
        {
          "id": 9,
          "gridPos": {"h": 8, "w": 8, "x": 0, "y": 20},
          "type": "gauge",
          "title": "CPU Usage",
          "targets": [
            {
              "expr": "cpu_usage_percent",
              "legendFormat": "CPU %"
            }
          ],
          "options": {
            "showThresholdLabels": true,
            "showThresholdMarkers": true
          },
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  {"value": 0, "color": "green"},
                  {"value": 70, "color": "yellow"},
                  {"value": 85, "color": "red"}
                ]
              },
              "max": 100,
              "min": 0
            }
          }
        },
        {
          "id": 10,
          "gridPos": {"h": 8, "w": 8, "x": 8, "y": 20},
          "type": "gauge",
          "title": "Memory Usage",
          "targets": [
            {
              "expr": "memory_percent",
              "legendFormat": "Memory %"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  {"value": 0, "color": "green"},
                  {"value": 70, "color": "yellow"},
                  {"value": 85, "color": "red"}
                ]
              },
              "max": 100,
              "min": 0
            }
          }
        },
        {
          "id": 11,
          "gridPos": {"h": 8, "w": 8, "x": 16, "y": 20},
          "type": "gauge",
          "title": "Disk Usage (/tmp)",
          "targets": [
            {
              "expr": "disk_usage_bytes{path=\"/tmp\"} / (disk_usage_bytes{path=\"/tmp\"} + disk_free_bytes{path=\"/tmp\"}) * 100",
              "legendFormat": "Disk %"
            }
          ],
          "fieldConfig": {
            "defaults": {
              "unit": "percent",
              "thresholds": {
                "mode": "absolute",
                "steps": [
                  {"value": 0, "color": "green"},
                  {"value": 70, "color": "yellow"},
                  {"value": 85, "color": "red"}
                ]
              },
              "max": 100,
              "min": 0
            }
          }
        },
        {
          "id": 12,
          "gridPos": {"h": 6, "w": 12, "x": 0, "y": 28},
          "type": "table",
          "title": "Error Summary",
          "targets": [
            {
              "expr": "sum by (type, endpoint) (rate(errors_total[5m]))",
              "format": "table",
              "instant": true
            }
          ],
          "options": {
            "showHeader": true
          },
          "transformations": [
            {
              "id": "organize",
              "options": {
                "excludeByName": {"Time": true},
                "renameByName": {
                  "type": "Error Type",
                  "endpoint": "Endpoint",
                  "Value": "Rate (per sec)"
                }
              }
            }
          ]
        },
        {
          "id": 13,
          "gridPos": {"h": 6, "w": 12, "x": 12, "y": 28},
          "type": "table",
          "title": "Models Usage",
          "targets": [
            {
              "expr": "sum by (model) (rate(separations_total[5m]))",
              "format": "table",
              "instant": true
            }
          ],
          "transformations": [
            {
              "id": "organize",
              "options": {
                "excludeByName": {"Time": true},
                "renameByName": {
                  "model": "Model",
                  "Value": "Usage (per sec)"
                }
              }
            }
          ]
        }
      ]
    },
    "overwrite": true
  }